<%= form_with(model: feed, local: true, url: choose_new_or_edit ) do |form| %>
  <% if @feed.errors.any? %>
    <div id="error_explanation">
    <h2><%= @feed.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @feed.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="feed_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="feed_content">
    <%= form.label :content %>
    <%= form.text_area :content, size: "50x10" %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <!-- 確認画面から新規作成画面に戻った時に、 -->
    <!-- アップロードした画像を表示させるための記述 -->
    <%= image_tag(@feed.image.url(:thumb)) if @feed.image && @feed.image.url %>
    <br>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<br>
<%= link_to "Back", feeds_path %>